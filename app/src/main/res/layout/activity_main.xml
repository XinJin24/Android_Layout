<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/imageWuzhen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/lake" />


        <TextView
            android:id="@+id/TextWuzhen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:text="Wuzhen"
            android:textSize="40sp"/>

        <TextView
            android:id="@+id/TextDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:textStyle="italic"
            android:text="Where your mind truly gets rest!"
            android:textSize="17sp" />

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:id="@+id/addressWuhan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/addressIcon"
                android:textSize="13sp"
                android:layout_centerInParent="true"
                android:text="No.18 South Shifo Road Wuzhen Town,"/>

            <ImageView
                android:id="@+id/addressIcon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/index"
                android:layout_toLeftOf="@id/addressWuhan1" />
        </RelativeLayout>

        <TextView
            android:id="@+id/addressWuhan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Tongxiang 314501 China\n"
            android:textSize="13sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Trip to here Today!" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>